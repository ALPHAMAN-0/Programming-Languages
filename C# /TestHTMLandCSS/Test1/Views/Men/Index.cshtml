@model IEnumerable<Test1.Models.Product>
@using System.IO

@{
    ViewData["Title"] = "Men's Collection";
}

<div class="category-header">
    <h1>Men's Collection</h1>
    <div class="filters">
        <select class="filter-dropdown">
            <option>Sort by</option>
            <option>Price: Low to High</option>
            <option>Price: High to Low</option>
            <option>Latest</option>
        </select>
    </div>
</div>

<div class="product-grid">
    @foreach (var product in Model)
    {
        <div class="product-card">
            <div class="product-image">
                <a asp-action="Details" asp-route-id="@product.ImagePath.Split('/').Last()">
                    <img src="@product.ImagePath" alt="@product.Name">
                </a>
                <div class="quick-view">Quick View</div>
            </div>
            <div class="product-info">
                <h3>@product.Name</h3>
                <p class="price">$@product.Price.ToString("0.00")</p>
                @if (!string.IsNullOrEmpty(product.Description))
                {
                    <p class="description">@product.Description</p>
                }
                <div class="size-options">
                    <span>S</span>
                    <span>M</span>
                    <span>L</span>
                    <span>XL</span>
                </div>
                <button class="add-to-cart" onclick="addToCart('@product.ImagePath.Split('/').Last()')">
                    Add to Cart
                </button>
            </div>
        </div>
    }
</div>
@model IEnumerable<Test1.Models.Product>

<div class="admin-dashboard">
    <h2>Manage Products</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <div class="product-management-grid">
        @foreach (var product in Model)
        {
            <div class="product-card">
                <img src="@product.ImagePath" alt="@product.Name" class="product-image" />
                <div class="product-details">
                    <h3>@product.Name</h3>
                    <p>Category: @product.Category</p>
                    <p>Price: $@product.Price.ToString("0.00")</p>
                    <form asp-action="DeleteProduct" asp-controller="Admin" method="post" 
                          onsubmit="return confirm('Are you sure you want to delete this product?');">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="imagePath" value="@product.ImagePath" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        }
    </div>
</div>